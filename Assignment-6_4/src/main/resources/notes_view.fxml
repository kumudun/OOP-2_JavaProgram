<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="668.0" prefWidth="898.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NoteController">

    <top>
        <Label text="Notebook" BorderPane.alignment="CENTER">
            <font><Font size="24.0" /></font>
        </Label>
    </top>

    <center>
        <VBox spacing="8.0" BorderPane.alignment="CENTER">
            <padding><Insets bottom="12" left="12" right="12" top="12" /></padding>
            <children>
            <Label />
            <Label prefHeight="18.0" prefWidth="68.0" text="Title" />
                <TextField fx:id="titleField" prefHeight="46.0" prefWidth="874.0" promptText="Title" />
                <TextArea fx:id="contentArea" prefRowCount="6" promptText="Write your note..." />
                <Button fx:id="addButton" maxWidth="Infinity" onAction="#handleAdd" text="Add" />
                <Separator />
                <Label text="Saved notes" />
                <TextArea fx:id="outputArea" editable="false" prefRowCount="10" />
            </children>
        </VBox>
    </center>

</BorderPane>
